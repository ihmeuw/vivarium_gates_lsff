components:
    vivarium_public_health:
        population:
            - BasePopulation()
            - FertilityCrudeBirthRate()
            - Mortality()
        disease.models:
            - SIS('diarrheal_diseases')
            - SIS_fixed_duration('measles', '10')
        risks:
            - RiskEffect('risk_factor.vitamin_a_deficiency', 'cause.diarrheal_diseases.incidence_rate')
            - RiskEffect('risk_factor.vitamin_a_deficiency', 'cause.measles.incidence_rate')
        metrics:
            - DiseaseObserver('diarrheal_diseases')
            - DiseaseObserver('measles')
            - DisabilityObserver()
            - MortalityObserver()

    vivarium_gates_lsff.components:
        - VitaminADeficiency()


configuration:
    input_data:
        location: {{ location_proper }}
        input_draw_number: 0
        artifact_path: {{ artifact_directory }}/{{ location_sanitized }}.hdf
    interpolation:
        order: 0
        extrapolate: True
    randomness:
        map_size: 1_000_000
        key_columns: ['entrance_time', 'age']
        random_seed: 0
    time:
        start:
            year: 2020
            month: 1
            day: 2
        end:
            year: 2023
            month: 12
            day: 30
        step_size: 1 # Days
    population:
        population_size: 10_000
        age_start: 0
        age_end: 5
        exit_age: 5
    metrics:
        disability:
            by_age: True
            by_sex: True
            by_year: True
        mortality:
            by_age: True
            by_sex: True
            by_year: True
        diarrheal_diseases_observer:
            by_age: True
            by_sex: True
            by_year: True
        measles_observer:
            by_age: True
            by_sex: True
            by_year: True
